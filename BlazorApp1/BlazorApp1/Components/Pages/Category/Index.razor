@page "/products"
@using BlazorApp1.DTOs
<h3>index</h3>
@inject CategoryService CategoryService

<h3>Categorys</h3>

@if (_categorys == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in _categorys)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Name</td>
                <td>@category.ProductCount</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<CategoryDto>? _categorys;

    protected override async Task OnInitializedAsync()
    {
        _categorys = await CategoryService.GetAllCategorysAsync();
    }
}